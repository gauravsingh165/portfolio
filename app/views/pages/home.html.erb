<!-- AOS Library -->
<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>
  AOS.init();

  // Typing animation with fixed height to prevent screen squeeze
  const roles = ["Software Developer", "Backend Engineer", "Full Stack Developer", "Tech Enthusiast"];
  let index = 0;
  let charIndex = 0;
  const roleElement = document.querySelector(".dynamic-role");

  // Reserve space based on longest role
  const longest = roles.reduce((a, b) => a.length > b.length ? a : b, "");
  roleElement.style.minWidth = longest.length + "ch"; // Reserve width
  roleElement.style.display = "inline-block";

  function type() {
    if (charIndex < roles[index].length) {
      roleElement.textContent = roles[index].substring(0, charIndex + 1);
      charIndex++;
      setTimeout(type, 100);
    } else {
      setTimeout(erase, 2000);
    }
  }

  function erase() {
    if (charIndex > 0) {
      roleElement.textContent = roles[index].substring(0, charIndex - 1);
      charIndex--;
      setTimeout(erase, 50);
    } else {
      index = (index + 1) % roles.length;
      setTimeout(type, 300);
    }
  }

  document.addEventListener("DOMContentLoaded", type);
</script>

