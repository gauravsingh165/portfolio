<section class="hero-section d-flex flex-column flex-md-row align-items-center justify-content-between px-5 py-5">
  <div class="hero-left mb-5 mb-md-0">
    <h1 class="fw-light">Hello <span class="text-danger">.</span></h1>

    <div class="d-flex align-items-center gap-3">
      <div class="red-line-hor"></div>
      <h1 class="fw-bold display-5 mb-0">I'm Gaurav</h1>
    </div>

    <h2 class="fw-bold fs-2">Software Developer</h2>

<div class="mt-4 d-flex gap-3 flex-wrap">
  <a href="#" class="btn btn-danger">Got a project?</a>
  <%= link_to "My resume", resume_path(1), class: "btn btn-outline-primary" %>
</div>

  </div>

  <div class="hero-right position-relative text-center">
    <div class="hero-bg-circle"></div>
    <%= image_tag "my_image.jpeg", alt: "Gaurav", class: "hero-image" %>
  </div>
</section>

<!-- Skills Bar -->
<div class="skills-bar fs-6 border-top border-secondary border-opacity-25">
  <span>HTML5</span>
  <span>CSS</span>
  <span>JavaScript</span>
  <span>Ruby</span>
  <span>Ruby On Rails</span>
  <span>Git</span>
  <span>PostgreSQL</span>
  <span>Docker</span>
</div>

<!-- About Section -->
<section class="about-section py-5 px-4 px-md-5">
  <div class="row">
    <div class="col-md-6 mb-4 mb-md-0 position-relative">
      <div class="red-line-full d-none d-md-block"></div>
      <ul class="list-unstyled service-list ms-4 ps-3 position-relative z-2">
        <li class="mb-5 d-flex align-items-center position-relative dot-line">
          <span class="red-dot"></span>
          <i class="bi bi-laptop text-danger me-3 fs-4"></i>
          <span class="fs-5">Website Development</span>
        </li>
        <li class="mb-5 d-flex align-items-center position-relative dot-line">
          <span class="red-dot"></span>
          <i class="bi bi-phone text-danger me-3 fs-4"></i>
          <span class="fs-5">App Development</span>
        </li>
        <li class="d-flex align-items-center position-relative dot-line">
          <span class="red-dot"></span>
          <i class="bi bi-hdd-network text-danger me-3 fs-4"></i>
          <span class="fs-5">Website Hosting</span>
        </li>
      </ul>
    </div>

    <div class="col-md-6">
      <h2 class="fw-bold mb-3">About me</h2>
      <p class="about-text">
        I’m a passionate software developer who enjoys turning ideas into functional, user-friendly applications.
        I’m driven by a love for learning, problem-solving, and building scalable web solutions—especially using Ruby on Rails.
      </p>
      <div class="d-flex flex-wrap mt-4 gap-4">
        <div>
          <h3 class="text-danger">20 +</h3>
          <p class="mb-0 stats-text">Completed Projects</p>
        </div>
        <div>
          <h3 class="text-danger">95 %</h3>
          <p class="mb-0 stats-text">Client satisfaction</p>
        </div>
        <div>
          <h3 class="text-danger">2 +</h3>
          <p class="mb-0 stats-text">Years of experience</p>
        </div>
      </div>
    </div>
  </div>
</section>

