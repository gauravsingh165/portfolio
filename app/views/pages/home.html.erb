<style>
/* Hero Section */
.hero-section {
  background-color: var(--primary-color);
  color: var(--text-color);
  position: relative;
  overflow: hidden;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  transition: background-image var(--transition-speed) ease;
}

/* Dark theme background */
.hero-section {
  background-image: url('<%= asset_path("bg-top.jpg") %>');
}

/* Light theme background */
[data-theme="light"] .hero-section {
  background-image: url('<%= asset_path("pexels.jpg") %>');
}

.hero-left .red-line-hor {
  height: 3px;
  width: 60px;
  background-color: #dc3545;
}

.hero-right {
  position: relative;
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  min-height: 300px;
}

.hero-bg-circle {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 300px;
  height: 300px;
  transform: translate(-50%, -50%);
  background: radial-gradient(circle at center, rgba(59, 130, 246, 0.2), transparent 70%);
  border-radius: 50%;
  z-index: 1;
}

[data-theme="light"] .hero-bg-circle {
  background: radial-gradient(circle at center, rgba(239, 68, 68, 0.2), transparent 70%);
}

.hero-image {
  width: 220px;
  height: 220px;
  object-fit: cover;
  border-radius: 50%;
  border: 5px solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 0 30px rgba(0, 0, 0, 0.6);
  z-index: 3;
  background-color: var(--primary-color);
  position: relative;
}

/* Skills Bar */
.skills-bar {
  padding-top: 2rem;
  padding-bottom: 2rem;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
  gap: 2rem;
  font-size: 1.25rem;
  font-weight: 700;
  letter-spacing: 0.5px;
  text-transform: uppercase;
  background-color: var(--secondary-color);
  border-top: 1px solid var(--border-color);
  color: var(--text-color);
}

/* About Section */
.about-section {
  background-color: var(--secondary-color);
  color: var(--text-color);
}

.about-text {
  color: var(--text-muted);
}

.stats-text {
  color: var(--text-muted);
}

/* About Section Vertical Line */
.red-line-full {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 2.3rem;
  width: 2px;
  background-color: #dc3545;
  z-index: 1;
}

.red-dot {
  width: 10px;
  height: 10px;
  background-color: #dc3545;
  border-radius: 50%;
  display: inline-block;
  position: absolute;
  left: -1.2rem;
  top: 0.5rem;
}

.dot-line {
  padding-left: 1.5rem;
}

/* Button overrides for theme compatibility */
.btn-outline-primary {
  color: var(--accent-color) !important;
  border-color: var(--accent-color) !important;
  background-color: transparent !important;
}

.btn-outline-primary:hover {
  color: white !important;
  background-color: var(--accent-color) !important;
  border-color: var(--accent-color) !important;
}

/* Responsive adjustments */
@media (max-width: 767px) {
  .hero-image {
    width: 180px;
    height: 180px;
  }

  .hero-bg-circle {
    width: 240px;
    height: 240px;
  }

  .skills-bar {
    justify-content: space-evenly;
    gap: 1rem;
    padding-top: 1.2rem;
    padding-bottom: 1.2rem;
  }
}
</style>
