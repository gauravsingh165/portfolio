<div id="<%= dom_id project %>">
  <h5 class="fw-semibold text-danger mb-3 d-flex align-items-center">
    <i class="bi bi-folder-fill me-2"></i><%= project.title %>
  </h5>

  <p class="project-description mb-3" style="min-height: 60px;">
    <%= truncate(project.description, length: 100) %>
  </p>

  <div class="d-flex flex-column gap-1">
    <% if project.github_url.present? %>
      <a href="<%= project.github_url %>" target="_blank" rel="noopener" class="text-decoration-none project-link">
        <i class="bi bi-github me-2"></i> GitHub
      </a>
    <% end %>

    <% if project.live_url.present? %>
      <a href="<%= project.live_url %>" target="_blank" rel="noopener" class="text-decoration-none project-link">
        <i class="bi bi-box-arrow-up-right me-2"></i> Live Demo
      </a>
    <% end %>
  </div>

  <% if project.tech_stack.present? %>
    <div class="mt-3 d-flex flex-wrap gap-2">
      <% project.tech_stack.split(",").map(&:strip).each do |tech| %>
        <span class="badge tech-badge border-0 px-3 py-2 shadow-sm rounded-pill" data-bs-toggle="tooltip" title="<%= tech %>">
          <%# Replace with actual logic for icons if needed %>
          <% if tech.downcase.include?("react") %>
            <i class="fab fa-react me-1"></i>
          <% elsif tech.downcase.include?("ruby") %>
            <i class="fas fa-gem me-1"></i>
          <% elsif tech.downcase.include?("js") || tech.downcase.include?("javascript") %>
            <i class="fab fa-js me-1"></i>
          <% end %>
          <%= tech %>
        </span>
      <% end %>
    </div>
  <% end %>
</div>

<style>
.project-description {
  color: var(--text-muted);
}

.project-link {
  color: var(--text-color);
  transition: color 0.3s ease;
}

.project-link:hover {
  color: var(--accent-color);
}

.tech-badge {
  background: var(--accent-color);
  color: white;
  transition: all 0.3s ease;
}

.tech-badge:hover {
  background: var(--accent-hover);
  transform: translateY(-1px);
}
</style>
