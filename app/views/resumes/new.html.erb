<h2>Upload Resume</h2>

<%= form_with model: @resume, local: true do |form| %>
  <div class="mb-3">
    <%= form.label :file, class: "form-label" %>
    <%= form.file_field :file, class: "form-control", accept: "application/pdf" %>
  </div>

  <%= form.submit "Upload", class: "btn btn-primary" %>
<% end %>
